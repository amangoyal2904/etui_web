{
  "private": true,
  "scripts": {
    "dev": "PORT=3002 NODE_ENV=development next",
    "build": "next build",
    "start": "PORT=3002 NODE_ENV=development next start",
    "prod": "PORT=3002 NODE_ENV=production next start",
    "lint": "eslint",
    "type-check": "tsc",
    "test": "NODE_ENV=test jest",
    "winTest": "SET NODE_ENV=test && jest",
    "winDev": "SET PORT=3002 && SET NODE_ENV=development && next",
    "winStart": "SET PORT=3002 && SET NODE_ENV=development && next start",
    "prepare": "husky install",
    "check-format": "prettier --check",
    "format": "prettier --write",
    "pretty-quick": "pretty-quick"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.2",
    "axios": "^1.7.2",
    "embla-carousel-fade": "^8.1.5",
    "embla-carousel-react": "^8.1.3",
    "husky": "^8.0.2",
    "jstorage-react": "^1.0.2",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-google-recaptcha": "^3.1.0",
    "react-redux": "^7.2.6",
    "react-slick": "^0.30.2",
    "sass": "^1.49.7",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^13.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.75",
    "@types/react-dom": "^17.0.25",
    "@types/react-redux": "^7.1.18",
    "eslint": "^8.9.0",
    "eslint-config-next": "^14.0.4",
    "jest": "^29.6.1",
    "jest-css-modules-transform": "^4.2.0",
    "jest-environment-jsdom": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.2.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx|js|jsx)": [
      "pretty-quick --staged",
      "npx eslint ./src",
      "jest ./src --coverage=false",
      "next build ./"
    ]
  },
  "version": "0.0.1"
}
