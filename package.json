{
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development APP_ENV=development next",
    "build": "next build",
    "start": "NODE_ENV=production APP_ENV=development next start",
    "prod": "NODE_ENV=production APP_ENV=production next start",
    "lint": "eslint",
    "type-check": "tsc",
    "test": "NODE_ENV=test jest",
    "winTest": "SET NODE_ENV=test && jest",
    "winDev": "SET NODE_ENV=development && SET APP_ENV=development && next",
    "winStart": "SET NODE_ENV=production && SET APP_ENV=development && next start",
    "prepare": "husky install",
    "check-format": "prettier --check",
    "format": "prettier --write",
    "pretty-quick": "pretty-quick"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.2",
    "axios": "^0.26.0",
    "next": "^13.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",    
    "react-redux": "^7.2.6",
    "sass": "^1.49.7"    
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "eslint": "^8.9.0",
    "eslint-config-next": "^12.0.10",
    "jest": "^27.2.0",
    "jest-css-modules-transform": "^4.2.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.4"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx|js|jsx)": [
      "pretty-quick --staged",
      "npx eslint ./src",
      "jest ./src --coverage=false",
      "next build ./"
    ]
  },
  "version": "0.0.1"
}
